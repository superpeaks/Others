JOIN
----
select 
r.name as restaurant_name,
o.order_date 
from Restaurants r
join orders o on r.id = o.restaurant_id
join customers c on c.cust_id = o.customer_id


LEFT
----
select 
r.name as restaurant_name,
o.order_date 
from Restaurants r
left join orders o on r.id = o.restaurant_id


RIGHT
-----
select 
r.name as restaurant_name,
o.order_date 
from Restaurants r
right join orders o on r.id = o.restaurant_id
